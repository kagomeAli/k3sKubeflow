        ./models/fabric/ nvidia@140.115.53.52:/home/nvidia/Downloads/fabric/


rsync -e "ssh -p21000" -auvz --progress --delete --bwlimit=2048 ./data/models/fabric/ nvidia@140.115.53.52:/home/nvidia/Downloads/fabric